/* pages/audio/audio.wxss */

.rotateImg {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, .3);
  position: fixed;
  right: 10rpx;
  top: 10rpx;
  padding-right: 6rpx;
  box-sizing: border-box;
  z-index: 999;
}

.rotateImg image {
  width: 30rpx;
  height: 30rpx;
}

.slide-image{
  width: 100%;
  height: 100%;
}


.container {
	flex: 1;
  flex-direction: column;
 	box-sizing: border-box;
  padding: 0;
  align-items:initial;
  justify-content:first baseline;
}

.container-fill{
	height: 100%;
	overflow: hidden;
}

.scroll-fullpage{
	height: 100%;
  transition: .5s;
}

.section{
	height: 100%;
}

.active .cont {
  -webkit-animation-duration: 1.8s;
  animation-duration: 1.8s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  -webkit-animation-name: fadeInUp;
  animation-name: fadeInUp;
}

.cont{
  width: 100%;
  height: 100%;
  margin: 0 auto;
  position: relative;
}

